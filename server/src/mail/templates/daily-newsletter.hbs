<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Today's Featured Events</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      table {
        border-spacing: 0;
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        background-color: #ffffff;
      }
      td {
        padding-bottom: 10px;
      }
      .header {
        background-color: #28a745;
        color: #ffffff;
        padding: 20px;
        text-align: center;
      }
      .content {
        padding: 20px;
      }
      .event {
        margin-bottom: 20px;
        border-bottom: 1px solid #dddddd;
        padding-bottom: 20px;
      }
      .event-title {
        font-size: 18px;
        color: #333333;
        margin: 0 0 10px 0;
      }
      .event-details {
        font-size: 14px;
        color: #666666;
        margin: 5px 0;
      }
      .event-thumbnail {
        width: 100%;
        max-width: 150px;
        height: auto;
        display: block;
        margin-bottom: 15px;
      }
      .footer {
        background-color: #f4f4f4;
        padding: 20px;
        text-align: center;
        font-size: 12px;
        color: #999999;
      }
      a {
        color: #28a745;
        text-decoration: none;
      }
      .no-events {
        text-align: center;
        font-size: 16px;
        color: #666666;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
      <!-- Header -->
      <tr>
        <td>
          <table
            role="presentation"
            width="100%"
            cellpadding="0"
            cellspacing="0"
          >
            <tr>
              <td class="header">
                <h1>Featured Events Today at USF</h1>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <!-- Content -->
      <tr>
        <td>
          <table
            role="presentation"
            width="100%"
            cellpadding="0"
            cellspacing="0"
            class="content"
          >
            {{#if events.length}}
              {{#each events}}
              <tr class="event">
                <td>
                  <h2 class="event-title">{{this.title}}</h2>
                  <table cellpadding="0" cellspacing="0">
                    <tr>
                      <td>
                        <img
                          src="{{this.image}}"
                          alt="Event Thumbnail"
                          class="event-thumbnail"
                        />
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <p class="event-details">
                          <strong>Date:</strong> {{this.date}}
                        </p>
                        <p class="event-details">
                          <strong>Time:</strong> {{this.startTime}} - {{this.endTime}}
                        </p>
                        <p class="event-details">
                          <strong>Location:</strong> {{this.location}}
                        </p>
                        <p>
                          <a href="https://bullsconnect.usf.edu/web/rsvp_boot?id={{this.id}}">
                            View Event Details
                          </a>
                        </p>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              {{/each}}
            {{else}}
              <tr>
                <td class="no-events">
                  <p>No events scheduled for today. Check back tomorrow for more updates!</p>
                </td>
              </tr>
            {{/if}}
          </table>
        </td>
      </tr>
      <!-- Footer -->
